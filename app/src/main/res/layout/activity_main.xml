<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/rectangle_4"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_ijo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-130dp">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:layout_marginBottom="30dp"/>

                <View
                    android:id="@+id/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="273dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/background_kotak"></View>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="-240dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@mipmap/ic_person" />

                    <EditText
                        android:id="@+id/kotakNama"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:hint="Email"
                        android:textColor="#75000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passbox"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <ImageView
                        android:id="@+id/imagepass"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@mipmap/ic_pass" />

                    <EditText
                        android:id="@+id/kotakpass"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:hint="Password"
                        android:textColor="#75000000" />
                </LinearLayout>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/kotaklupapass"
                    android:text="Lupa Password?"
                    android:textColor="#87160909" />
                <Button
                    android:id="@+id/buttonMasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/kotaksimpan"
                    android:text="Masuk"
                    android:textColor="#fff" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="65dp"
                    android:weightSum="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#D3CDCD" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Atau"
                        android:textColor="#757070"
                        android:textSize="15dp"
                        android:textAlignment="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#D3CDCD" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Daftar"
                    android:textAlignment="center"
                    android:textColor="#A6000000"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="70dp">
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="127dp"
                        android:layout_height="43dp"
                        android:background="@drawable/kotaksimpan"
                        android:text="Pengguna"
                        android:textColor="#FFF"
                        android:layout_marginRight="40dp"/>

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="127dp"
                        android:layout_height="43dp"
                        android:background="@drawable/kotaksimpan"
                        android:text="DRIVER"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>