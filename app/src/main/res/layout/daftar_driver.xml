<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <View
            android:id="@+id/rectangle_4"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_ijo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-130dp">
            <TextView
                android:id="@+id/driverDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="DAFTAR"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_marginBottom="30dp"/>
            <View
                android:id="@+id/rectangle"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_kotak"></View>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="37.65dp"
                android:background="@drawable/kotak_nama"
                android:orientation="horizontal"
                android:layout_marginTop="-510dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <EditText
                    android:id="@+id/kotakNama"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Nama Lengkap"
                    android:textColor="#75000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="37.65dp"
                android:background="@drawable/kotak_nama"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <EditText
                    android:id="@+id/kotakemail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:hint="Email"
                    android:textColor="#75000000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="37.65dp"
                android:background="@drawable/kotak_nama"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <EditText
                    android:id="@+id/kotakalamat"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Alamat"
                    android:textColor="#75000000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/telp"
                android:layout_width="match_parent"
                android:layout_height="37.65dp"
                android:background="@drawable/kotak_nama"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <EditText
                    android:id="@+id/kotaktelp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#75000000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="37.65dp"
                android:background="@drawable/kotak_nama"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <EditText
                    android:id="@+id/kotakpass2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:hint="Password"
                    android:textColor="#75000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scanktp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/imagefolder2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_folder"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Scan KTP">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scansim"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/imagefolder1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_folder"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Scan SIM">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/scankk"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/imagefolder3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_folder"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Scan KK">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/scanfoto"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/imagefolder4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_folder"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Foto Terbaru">

                </TextView>

            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="Saya telah menyetujui persyaratan dan ketentuan dari aplikasi ini"
                android:textColor="#4F4040"/>
            <Button
                android:id="@+id/buttonMasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kotaksimpan"
                android:text="Daftar"
                android:textColor="#fff" />


        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>