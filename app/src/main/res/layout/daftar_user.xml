<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/rectangle_4"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_ijo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-130dp">
                <TextView
                    android:id="@+id/driverDaftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="DAFTAR"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="40sp"
                    android:layout_marginBottom="30dp"/>
                <View
                    android:id="@+id/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="421dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/background_kotak"></View>
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="-400dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <EditText
                        android:id="@+id/daftar_nama"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:hint="Nama Lengkap"
                        android:textColor="#75000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <EditText
                        android:id="@+id/daftar_email"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:hint="Email"
                        android:textColor="#75000000" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <EditText
                        android:id="@+id/daftar_alamat"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="10dp"
                        android:hint="Alamat"
                        android:fontFamily="@font/roboto"
                        android:textColor="#75000000" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/telp"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <EditText
                        android:id="@+id/daftar_telpon"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:hint="Nomor Telepon"
                        android:fontFamily="@font/roboto"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="#75000000" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pass2"
                    android:layout_width="match_parent"
                    android:layout_height="37.65dp"
                    android:background="@drawable/kotak_nama"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp">

                    <EditText
                        android:id="@+id/daftar_password"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:fontFamily="@font/roboto"
                        android:padding="10dp"
                        android:hint="Password"
                        android:textColor="#75000000" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/roboto"
                    android:text="Saya telah menyetujui persyaratan dan ketentuan dari aplikasi ini"
                    android:textAlignment="viewStart"
                    android:textColor="#4F4040" />
                <Button
                    android:id="@+id/button_daftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/kotaksimpan"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Daftar"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>