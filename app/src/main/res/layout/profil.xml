<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D3CDCD" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="60dp"  >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_man"/>

            <TextView
                android:id="@+id/kotakNama"
                android:fontFamily="@font/amiri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="28sp"
                android:text="Adudu"
                android:textColor="#DA000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="10"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D3CDCD" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/edit_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:textSize="19sp"></TextView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="10"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D3CDCD" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Ganti Password"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="20dp"
                android:textSize="19sp"></TextView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="10"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D3CDCD" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Beri Feedback"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:textSize="19sp"></TextView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="10"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D3CDCD" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="#C22828"></TextView>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>